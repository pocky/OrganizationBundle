<script type="text/javascript">
    var black_organization_organization_form_addressOld;
    function black_organization_organization_form_addressIntegrity() {
        jQuery('#black_organization_organization_form_address div:first-child div.field1 div.grid9 select option').each(function(index, value){
            if($(value).val() !== 'P' && $(value).val() !== '') {
                $(value).remove();
            }
        });
        var addressFound = 0;
        jQuery('#black_organization_organization_form_address div:first-child div.field1 div.grid9 select option').each(function(index, value){
            if($(value).val() === 'P') {
                addressFound++;
            }
        });
        if(addressFound === 0) {
            jQuery('#black_organization_organization_form_address div:first-child div.field1 div.grid9 select').append(black_organization_organization_form_addressOld);
        }
        jQuery('#black_organization_organization_form_address div:not(:first-child) div.field1 div.grid9 select option').each(function(index, value){
            if($(value).val() === 'P') {
                black_organization_organization_form_addressOld = $(value);
                $(value).remove();
            }
        });
    }
</script>